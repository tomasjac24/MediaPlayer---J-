<Window x:Class="MediaPlayer___Jáč.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer___Jáč"
        mc:Ignorable="d"
        Title="My Application" WindowState="Maximized" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,386">
            <MenuItem Header="OpenFile" Name="OpenFile" Click="OpenFile_Click"></MenuItem>
        </Menu>
        <MediaElement Name="Player" HorizontalAlignment="Center" IsMuted="True" LoadedBehavior="Manual"/>
        <Button Content="Pause/Play" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="37" Width="76" Click="Button_Click"/>
    </Grid>
</Window>